<% provide(:title, "Home") %>

<div class="posts">
  <header class="posts-header">
    <h2 class="posts-title">THE STACK</h2>
  </header>
  <div class="posts-grid">
    <ul class="posts-grid__list">
      <% @posts.each do |post| %>
        <li class="posts-grid__list-item">
          <div class="posts-item">
            <div class="posts-item__container">
              <a 
                href="<%= post_path(post) %>" 
                class="posts-item__link"
              >
                <div 
                  class="posts-item__feature-img" 
                  style="background-image: url(http://placehold.it/1600x900)"
                  role="img"
                  data-img-src="http://placehold.it/1600x900"
                  title=""
                >
                  <div class="overlay mod-dark"></div>
                </div>
              </a>
              <h2 class="posts-item__title">
                <a 
                  href="<%= post_path(post) %>"
                  class="post-item__title-link"
                ><%= post.title %></a>
              </h2>
              <time class="posts-item__date">
                <div class="posts-item__date-icon">
                  <%= svg 'calendar' %>
                </div>
                <div class="posts-item__date-copy">16 Oct 2018</div>
              </time>
              <p class="posts-item__excerpt">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Iste ipsam possimus in quae ad reprehenderit culpa. Non nesciunt repellendus sequi sapiente nihil voluptatum cumque at, tempore libero, porro consequuntur odit.
              </p>
              <ul class="posts-item__categories">
                <li class="posts-item__category">
                  <a 
                    href="#" 
                    class="posts-item__category-link"
                  >MAPS</a>
                </li>
              </ul>
            </div>
          </div>
        </li>
      <% end %>
    </ul>

  </div>  
</div>

