        </li>
      <% end %>
    </ul> -->

    <div class="form-row">
      <%= form.label :socialTwitterUrl, 'Twitter URL' %>
      <%= form.text_field :socialTwitterUrl %>
    </div>

    <div class="form-row">
      <%= form.label :socialFacebookUrl, 'Facebook URL' %>
      <%= form.text_field :socialFacebookUrl %>
    </div>
  
    <!-- Update settings button -->
    <div class="form-row">
      <%= form.submit 'Update settings' %>
