

<div class="form-wrapper">
  <h2>Meta Settings</h2>

  <%= form_with(model: @setting, local: true) do |form| %> 
    <div class="form-row">
      <%= form.label :metaTitle, 'Meta Title' %>
      <%= form.text_field :metaTitle %>
    </div>

    <div class="form-row">
      <%= form.label :metaAuthor, 'Meta Author' %>
      <%= form.text_field :metaAuthor %>
    </div>
   
    <div class="form-row">
      <%= form.label :metaDescription, 'Meta Description' %>
      <%= form.text_field :metaDescription %>
    </div>

    <div class="form-row">
      <%= form.label :metaKeywords, 'Meta Keywords' %>
      <%= form.text_field :metaKeywords %>
    </div>

    <h2>Social Media</h2>

